doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="css/style.min.css")
        title The Art of Arita
    body 
        .mouse(aria-hidden="true")
            .mouse__view View
        .preloader 
            span.preloader__back Contemporary 
            p.preloader__forward The Art of Árita
                span.preloader__background 
        .wrapper 
            include components/header 
            +header 
            main.main
                h1.visually-hidden Designers studio Arita 
                section.main-section.slide-1 
                    .container 
                        .slides-container 
                            .slides-wrapper
                                .slides-container__left 
                                    .main-section__explore Explore Designers 
                                    .slides-container__slide.slides-container__slide--active 
                                        .slides-container__text 
                                            h2.slides-container__title Kirstie van&nbsp;Noort 
                                            .designers-info__image 
                                                img(src="@img/6.png", alt="" draggable="false")
                                            .designers-info__desc 
                                                .designers-info__country Netherlands
                                                .designers-info__by photo by <br>Kenta Hasegawa
                                    .slides-container__slide 
                                        .slides-container__text 
                                            h2.slides-container__title Tomás Alonso
                                            .designers-info__image 
                                                img(src="@img/7.png", alt="" draggable="false")
                                            .designers-info__desc 
                                                .designers-info__country SPAIN
                                                .designers-info__by photo by <br>Kenta Hasegawa
                                    .slides-container__slide 
                                        .slides-container__text 
                                            h2.slides-container__title Stefan Diez
                                            .designers-info__image 
                                                img(src="@img/8.png", alt="" draggable="false")
                                            .designers-info__desc 
                                                .designers-info__country Germany
                                                .designers-info__by photo by <br>Kenta Hasegawa
                                    .slides-container__slide 
                                        .slides-container__text 
                                            h2.slides-container__title Teruhiro Yanagihara
                                            .designers-info__image 
                                                img(src="@img/9.png", alt="" draggable="false")
                                            .designers-info__desc 
                                                .designers-info__country Japan
                                                .designers-info__by photo by <br>Kenta Hasegawa
                                    .slides-container__slide 
                                        .slides-container__text 
                                            h2.slides-container__title Leon Ransmeier
                                            .designers-info__image 
                                                img(src="@img/10.png", alt="" draggable="false")
                                            .designers-info__desc 
                                                .designers-info__country New York, USA
                                                .designers-info__by photo by <br>Kenta Hasegawa
                                .slides-container__bg 
                                    .slide-bg__inner.slide-bg__inner--current 
                                        a(href="#" data-bg="img/1.png").slide-bg__link 
                                    .slide-bg__inner
                                        a(href="#" data-bg="img/2.png").slide-bg__link 
                                    .slide-bg__inner
                                        a(href="#" data-bg="img/3.png").slide-bg__link 
                                    .slide-bg__inner
                                        a(href="#" data-bg="img/4.png").slide-bg__link 
                                    .slide-bg__inner
                                        a(href="#" data-bg="img/5.png").slide-bg__link 
                    .shapes 
                        .shapes__item.shapes__item--current 
                            .shapes__content(data-bg="#C9B39B")
                        .shapes__item 
                            .shapes__content(data-bg="#D6D8CF")
                        .shapes__item 
                            .shapes__content(data-bg="#D2E5DE")
                        .shapes__item 
                            .shapes__content(data-bg="#DFE5E7")
                        .shapes__item 
                            .shapes__content(data-bg="#D6D8CF")
        input(type="hidden" value="1" id="helper-input")
        script(src="js/app.min.js") 